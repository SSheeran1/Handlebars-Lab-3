<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Assignment</title>
  </head>
  <body>
    <h1>Edit Assignment</h1>
    <form action="/grades/{{id}}/edit-submit" method="POST">
      <label for="name">Assignment Name</label>
      <input type="text" name="name" id="name" value={{name}} />
      <label for="score">Your Score</label>
      <input type="text" name="score" id="score" value={{score}} />
      <label for="total">Total Possible Score</label>
      <input type="text" name="total" id="total" value={{total}} />
      {{!-- {{#if completed}} --}}
        <input type="checkbox" name="completed" id="completed" {{#if completed}}checked {{/if}}/>
      {{!-- {{else}}
        <input type="checkbox" name="completed" id="completed" /> --}}
      {{!-- {{/if}} --}}

      <label for="completed">Have you completed this assignment?</label>
      <button>Save</button>
      <a href="/">Nevermind</a>
    </form>
  </body>
</html>